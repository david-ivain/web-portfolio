---
import "@styles/style.css";

import Footer from "@components/blocks/layout/Footer.astro";
import BackGround from "@components/blocks/layout/BackGround.astro";
import WIPBanner from "@components/blocks/layout/WIPBanner.astro";

interface Props {
    title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta
            name="viewport"
            content="initial-scale=1.0, maximum-scale=1.0, width=device-width, viewport-fit=cover"
        />
        <title>{title}</title>
    </head>
    <body>
        <WIPBanner />
        <BackGround />
        <slot />
        <Footer />
    </body>
</html>
