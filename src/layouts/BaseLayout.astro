---
import "@styles/style.css";

interface Props {
    title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta
            name="viewport"
            content="initial-scale=1.0, maximum-scale=1.0, width=device-width, user-scalable=no, viewport-fit=cover"
        />
        <title>{title}</title>
    </head>
    <body>
        <slot />
        <script src="/js/script.js" type="module"></script>
    </body>
</html>
